<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/light_table_out"
        android:id="@+id/parent_setting"
        android:layout_height="match_parent">

    <include
            layout="@layout/app_bar_setting"
            android:id="@+id/toolbar_setting"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar_setting"
            android:stretchColumns="*">

        <TableRow>
            <RelativeLayout
                    android:layout_height="60dp"
                    android:layout_width="match_parent">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/light_title2"
                        android:text="INFO"
                        android:layout_alignParentBottom="true"
                />
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <RelativeLayout android:layout_height="50dp"
                            android:layout_width="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/setting_button_light">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"

                        android:textColor="@color/light_title"
                        android:text="OpenSource"
                        android:layout_alignParentStart="true"
                />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/to_right_light"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <RelativeLayout android:layout_height="50dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:background="@drawable/setting_button_light">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"

                        android:layout_marginBottom="5dp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_title"
                        android:text="Version"
                />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/to_right_light"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <RelativeLayout
                    android:layout_height="60dp"
                    android:layout_width="match_parent">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/light_title2"
                        android:text="FEEDBACK"
                        android:layout_alignParentBottom="true"
                />
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <RelativeLayout android:layout_height="50dp"
                            android:layout_width="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/setting_button_light">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_centerVertical="true"

                        android:layout_height="wrap_content"
                        android:textColor="@color/light_title"
                        android:text="Play Store Review"
                />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/to_right_light"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <RelativeLayout android:layout_height="50dp"
                            android:layout_width="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/setting_button_light">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_centerVertical="true"

                        android:layout_height="wrap_content"
                        android:textColor="@color/light_title"
                        android:text="Developer Email"
                />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/to_right_light"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"/>
            </RelativeLayout>
        </TableRow>

    </TableLayout>
</RelativeLayout>