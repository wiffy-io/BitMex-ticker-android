<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/light_table_out">

    <RelativeLayout
            android:backgroundTint="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/langSet2"
                android:textColor="@color/light_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Language"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
        />
        <RelativeLayout
                android:id="@+id/lang_Relative2"
                android:layout_below="@id/langSet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:background="@drawable/custom_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/lang_EN2"
                    android:layout_alignParentTop="true"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
            >
                <TextView
                        android:textColor="@color/light_title2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:text="English"
                />

            </RelativeLayout>
            <RelativeLayout
                    android:background="@drawable/custom_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/lang_KO2"
                    android:layout_below="@id/lang_EN2"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
            >
                <TextView
                        android:textColor="@color/light_title2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:text="한국어"
                />

            </RelativeLayout>

            <RelativeLayout
                    android:background="@drawable/custom_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/lang_ZH2"
                    android:layout_below="@id/lang_KO2"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
            >
                <TextView
                        android:textColor="@color/light_title2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:text="中文"
                />

            </RelativeLayout>
            <RelativeLayout
                    android:background="@drawable/custom_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/lang_JA2"
                    android:layout_below="@id/lang_ZH2"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
            >
                <TextView
                        android:textColor="@color/light_title2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:text="日本語"
                />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>