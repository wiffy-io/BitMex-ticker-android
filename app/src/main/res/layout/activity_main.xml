<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/dark_table_out"
        android:id="@+id/parent_main"
        android:layout_height="match_parent">

    <include
            layout="@layout/app_bar_main"
            android:id="@+id/toolbar_main"/>
    <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_main"
            android:overScrollMode="always">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:id="@+id/bgc"
                    android:layout_alignParentTop="true"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/dark_table_in"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp">
                <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                    <TextView
                            android:id="@+id/trd"
                            android:textColor="@color/myBlue"
                            android:text="@string/Recent_Trades"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_below="@+id/trd"
                            android:id="@+id/trd_info"
                            android:text="@string/tem"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                    android:layout_below="@+id/bgc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name_uppercase"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/myBlue"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/BTC"
                    android:layout_marginStart="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:paddingTop="3dp"
                    android:overScrollMode="never"
                    android:layout_below="@+id/BTC"
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"/>

            <View
                    android:layout_below="@id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
        </RelativeLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-0355430122346055/3779365351">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
